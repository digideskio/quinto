<% @no_page_title = true %>

<div class="row" id="game-info" data-gameId="<%= @game_id %>" data-playerPosition="<%= @position %>" data-players="<%= @players.to_json %>" data-token="<%= csrf_token %>">
  <div class="col-md-4">
    <h1 id="title"><%= @page_title = "Game #{@game_id}: VS #{(@players - [player.email]).join(', ')}" %></h1>
    <div id="spinner"><img src="/spinner.gif"/></div>
    <h2 id="to_move"></h2>
    <div id="scores"></div>
    <div id="current_move"></div>
  </div>

  <div class="col-md-8" id="board_rack">
    <div id="board"></div>
    <div id="rack"></div>
  </div>
</div>

<script type="text/javascript" src="/jquery.min.js"></script>
<script type="text/javascript" src="/app.js"></script>
